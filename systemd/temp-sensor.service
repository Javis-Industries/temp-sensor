[Unit]
Description=DHT22 Temperature Sensor with Prometheus Metrics
After=network.target

[Service]
Type=simple
User={{USER}}
WorkingDirectory={{INSTALL_DIR}}
ExecStart={{INSTALL_DIR}}/venv/bin/python3 {{INSTALL_DIR}}/sensor.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target