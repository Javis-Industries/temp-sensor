[Unit]
Description=DHT22 Temperature Sensor with Prometheus Metrics
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/temp_sensor
ExecStart=/usr/bin/python3 /home/pi/temp_sensor/sensor.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target